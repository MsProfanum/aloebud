<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CardDetails" >


    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Card Title"
        android:textColor="@android:color/black"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/text_view_description"
        android:layout_width="360dp"
        android:layout_height="70dp"
        android:layout_below="@+id/text_view_title"
        android:layout_alignStart="@+id/button_check_in"
        android:layout_marginTop="1dp"
        android:text="Description"
        android:textColor="@android:color/darker_gray"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/image_view_cardrev"
        android:layout_width="360dp"
        android:layout_height="400dp"
        android:layout_below="@+id/text_view_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_launcher_foreground" />

    <Button
        android:id="@+id/button_check_in"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view_cardrev"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Check in"
        android:onClick="saveToDb"/>
</RelativeLayout>